<resources>

    <style name="DarkAppTheme" parent="Theme.MaterialComponents">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="actionBarTheme">@style/AppBarTheme</item>
    </style>

    <style name="LightAppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="actionBarTheme">@style/AppBarTheme</item>
    </style>

    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:alwaysDrawnWithCache">true</item>
    </style>

</resources>
