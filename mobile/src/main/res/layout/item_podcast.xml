<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="java.lang.Integer" />

        <variable
            name="viewModel"
            type="com.podcasses.viewmodel.base.BasePodcastViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_offset"
        android:onClick="@{() -> viewModel.onPodcastClick(position)}">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/podcast_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="fitCenter"
            app:imageUrl='@{viewModel.podcastImage(position)}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/podcast_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="#99000000"
            android:text="@{viewModel.getPodcastAt(position).duration}"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintBottom_toBottomOf="@id/podcast_image"
            app:layout_constraintEnd_toEndOf="@id/podcast_image"
            app:layout_constraintTop_toTopOf="@id/podcast_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/podcast_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="15dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@{viewModel.getPodcastAt(position).title}"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@id/play_button"
            app:layout_constraintStart_toEndOf="@id/podcast_image"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/podcast_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.onAccountClick(position)}"
            android:paddingStart="@dimen/small_offset"
            android:paddingEnd="@dimen/small_offset"
            android:paddingBottom="5dp"
            android:text="@{viewModel.getPodcastAt(position).username}"
            app:layout_constraintStart_toEndOf="@id/podcast_image"
            app:layout_constraintTop_toBottomOf="@id/podcast_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/podcast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/small_offset"
            android:paddingEnd="@dimen/small_offset"
            android:text="@{viewModel.getPodcastAt(position).podcastDate}"
            app:layout_constraintStart_toEndOf="@id/podcast_image"
            app:layout_constraintTop_toBottomOf="@id/podcast_username" />

        <com.ohoussein.playpause.PlayPauseView
            android:id="@+id/play_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/medium_offset"
            android:layout_marginTop="@dimen/medium_offset"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:onClick="@{() -> viewModel.onPlayButtonClick(position)}"
            app:fill_color="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/options_button"
            app:layout_constraintTop_toTopOf="parent"
            app:pause_bg="@android:color/transparent"
            app:playPauseStatus='@{viewModel.playingIndex}'
            app:play_bg="@android:color/transparent"
            app:position='@{position}' />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="@{v -> viewModel.onOptionsButtonClick(v, position)}"
            android:src="@drawable/ic_more_options"
            app:layout_constraintBottom_toBottomOf="@id/play_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/play_button" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/podcast_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_offset"
            android:text="@{String.valueOf(viewModel.getPodcastAt(position).views)}"
            app:layout_constraintRight_toRightOf="@id/play_button"
            app:layout_constraintTop_toBottomOf="@id/podcast_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>