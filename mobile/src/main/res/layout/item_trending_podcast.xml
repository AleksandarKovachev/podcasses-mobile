<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="java.lang.Integer" />

        <variable
            name="viewModel"
            type="com.podcasses.viewmodel.base.BasePodcastViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/podcast_card"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{() -> viewModel.onPodcastClick(position)}"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/podcast_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                app:imageUrl='@{viewModel.podcastImage(position)}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/podcast_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="#99000000"
                android:text="@{viewModel.getPodcastAt(position).duration}"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintBottom_toBottomOf="@id/podcast_image"
                app:layout_constraintEnd_toEndOf="@id/podcast_image"
                app:layout_constraintTop_toTopOf="@id/podcast_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/podcast_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="15dp"
                android:text="@{viewModel.getPodcastAt(position).title}"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/options_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/podcast_image" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/options_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_offset"
                android:layout_marginEnd="5dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="@{v -> viewModel.onOptionsButtonClick(v, position)}"
                android:src="@drawable/ic_more_options"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/podcast_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/podcast_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:onClick="@{() -> viewModel.onAccountClick(position)}"
                android:paddingStart="@dimen/small_offset"
                android:paddingEnd="@dimen/small_offset"
                android:paddingBottom="5dp"
                android:text="@{viewModel.getPodcastAt(position).username}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/podcast_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>